{
  "name": "user-registration",
  "title": "User Registration",
  "version": "2.1.0",
  "homepage": "https://wpeverest.com/wordpress-plugins/user-registration/",
  "repository": {
    "type": "git",
    "url": "https://github.com/wpeverest/user-registration.git"
  },
  "license": "GPL-3.0+",
  "main": "Gruntfile.js",
  "scripts": {
    "build": "grunt && npm run makepot && cross-env BABEL_ENV=default NODE_ENV=production webpack",
    "dev": "cross-env BABEL_ENV=default webpack --watch",
    "makepot": "composer run-script makepot",
    "prelint-php": "wp-env run composer 'install --no-interaction'",
    "lint-php": "wp-env composer run-script phpcs",
    "test-php": "npm run lint-php && npm run test-unit-php",
    "test-php:watch": "wp-env run composer run-script test:watch",
    "pretest-unit-php": "wp-env start",
    "test-unit-php": "wp-env run phpunit 'phpunit --configuration=/var/www/html/wp-content/plugins/user-registration/phpunit.xml.dist --verbose'",
    "phpunit-test": "phpunit --verbose"
  },
  "devDependencies": {
    "@babel/core": "7.16.5",
    "@wordpress/babel-preset-default": "6.4.1",
    "@wordpress/browserslist-config": "4.1.0",
    "autoprefixer": "9.8.8",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.3",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-preset-env": "1.7.0",
    "cross-env": "7.0.3",
    "eslint": "8.5.0",
    "grunt": "1.4.1",
    "grunt-contrib-compress": "2.0.0",
    "grunt-contrib-concat": "2.0.0",
    "grunt-contrib-cssmin": "4.0.0",
    "grunt-contrib-jshint": "3.1.1",
    "grunt-contrib-uglify": "5.0.1",
    "grunt-contrib-watch": "1.1.0",
    "grunt-phpcs": "0.4.0",
    "grunt-postcss": "0.9.0",
    "grunt-rtlcss": "2.0.2",
    "grunt-sass": "3.1.0",
    "grunt-stylelint": "0.17.0",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "node-sass": "6.0.1",
    "stylelint": "13.13.1",
    "stylelint-config-wordpress": "17.0.0",
    "webpack": "5.65.0",
    "webpack-cli": "4.9.1"
  },
  "engines": {
    "node": ">=8.9.3",
    "npm": ">=5.5.1"
  },
  "dependencies": {
    "grunt-cli": "^1.4.3",
    "makepot": "^0.3.0",
    "path-parse": "^1.0.7"
  },
  "lint-staged": {
    "*.php": [
      "php -d display_errors=1 -l",
      "composer run-script phpcs-pre-commit"
    ],
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ],
    "!(*.min).js": [
      "eslint --fix",
      "git add"
    ]
  }
}
